{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Patient{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dashboard-container {
            padding: 30px;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .profile-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            padding: 25px;
            width: 100%;
            max-width: 600px;
            text-align: center;
            margin-bottom: 30px;
            transition: box-shadow 0.3s ease;
        }

        .profile-card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .profile-card img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
            margin-bottom: 15px;
            border: 4px solid #007bff;
            padding: 4px;
        }

        .profile-card h2 {
            font-size: 28px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }

        .profile-card p {
            font-size: 16px;
            color: #666;
            margin: 5px 0;
        }

        .contact-info {
            text-align: left;
            padding-left: 20px;
        }

        .contact-info p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .contact-info p strong {
            color: #333;
            font-weight: bold;
        }

        .contact-info a {
            color: #007bff;
            text-decoration: none;
            font-weight: 600;
        }

        .contact-info a:hover {
            text-decoration: underline;
        }

        .empty-message {
            font-size: 18px;
            color: #555;
            text-align: center;
            margin-top: 20px;
        }

        .profile-dropdown {
            position: relative;
            display: inline-block;
        }

        .profile-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .profile-dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .profile-dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .profile-dropdown:hover .profile-dropdown-content {
            display: block;
        }

        .profile-dropdown img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            object-fit: cover;
            cursor: pointer;
        }

        .logout-icon {
            margin-right: 8px;
        }

        .edit-button, .delete-button {
            background-color: #007bff;
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
            font-size: 18px;
        }

        .edit-button:hover {
            background-color: #0056b3;
        }

        .delete-button {
            background-color: #dc3545;
        }

        .delete-button:hover {
            background-color: #c82333;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
            border-radius: 10px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .modal-form label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .modal-form input,
        .modal-form select {
            margin-bottom: 10px;
            padding: 10px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .save-button {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .save-button:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block profile_image_dropdown %}

    <div class="profile-dropdown">
        <img src="{{ asset('uploads/images/' ~ app.user.imageProfil) }}" alt="Profile Image">
        <div class="profile-dropdown-content">
            <a href="{{ path('app_logout') }}">
                <i class="fas fa-sign-out-alt logout-icon"></i> Déconnexion
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    {% if app.user %}
        <div class="profile-card">
            <img src="{{ asset('uploads/images/' ~ app.user.imageProfil) }}" alt="Profile Image">
            <h2>{{ app.user.nom }} {{ app.user.prenom }}</h2>
            <div class="contact-info">
                <p><strong>Email:</strong> {{ app.user.email }}</p>
                <p><strong>Téléphone:</strong> {{ app.user.telephone }}</p>
                <p><strong>Adresse:</strong> {{ app.user.adresse }}</p>
                <p><strong>Âge:</strong> {{ app.user.age }}</p>
                <p><strong>Sexe:</strong> {{ app.user.sexe }}</p>
            </div>
            <button class="edit-button" onclick="openModal()">Modifier</button>
            <button class="delete-button" onclick="confirmDelete()">Supprimer</button>
        </div>
    {% else %}
        <p class="empty-message">Vous devez être connecté pour voir cette page.</p>
    {% endif %}
</div>

<!-- The Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        {{ form_start(form, {'attr': {'class': 'modal-form', 'novalidate': 'novalidate'}}) }}
            <div>
                {{ form_label(form.nom) }}
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom) }}
            </div>
            <div>
                {{ form_label(form.prenom) }}
                {{ form_errors(form.prenom) }}
                {{ form_widget(form.prenom) }}
            </div>
            <div>
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div>
                {{ form_label(form.telephone) }}
                {{ form_errors(form.telephone) }}
                {{ form_widget(form.telephone) }}
            </div>
            <div>
                {{ form_label(form.adresse) }}
                {{ form_errors(form.adresse) }}
                {{ form_widget(form.adresse) }}
            </div>
            <div>
                {{ form_label(form.age) }}
                {{ form_errors(form.age) }}
                {{ form_widget(form.age) }}
            </div>
            <div>
                {{ form_label(form.sexe) }}
                {{ form_errors(form.sexe) }}
                {{ form_widget(form.sexe) }}
            </div>
            <div>
                {{ form_label(form.imageProfil) }}
                {{ form_errors(form.imageProfil) }}
                {{ form_widget(form.imageProfil) }}
            </div>
            <button type="submit" class="save-button">Enregistrer</button>
            <button type="button" class="save-button" onclick="openPasswordModal()">Changer le mot de passe</button>
        {{ form_end(form) }}
    </div>
</div>

<!-- Password Change Modal -->
<div id="passwordModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closePasswordModal()">&times;</span>
        {{ form_start(passwordForm, {'attr': {'class': 'modal-form', 'novalidate': 'novalidate'}}) }}
            <div>
                {{ form_label(passwordForm.oldPassword) }}
                {{ form_errors(passwordForm.oldPassword) }}
                {{ form_widget(passwordForm.oldPassword) }}
            </div>
            <div>
                {{ form_label(passwordForm.newPassword) }}
                {{ form_errors(passwordForm.newPassword) }}
                {{ form_widget(passwordForm.newPassword) }}
            </div>
            <div>
                {{ form_label(passwordForm.confirmPassword) }}
                {{ form_errors(passwordForm.confirmPassword) }}
                {{ form_widget(passwordForm.confirmPassword) }}
            </div>
            <button type="submit" class="save-button">Changer le mot de passe</button>
        {{ form_end(passwordForm) }}
    </div>
</div>

<script>
    function openModal() {
        document.getElementById('editModal').style.display = 'block';
    }

    function closeModal() {
        document.getElementById('editModal').style.display = 'none';
    }

    function openPasswordModal() {
        document.getElementById('passwordModal').style.display = 'block';
    }

    function closePasswordModal() {
        document.getElementById('passwordModal').style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target == document.getElementById('editModal')) {
            closeModal();
        }
        if (event.target == document.getElementById('passwordModal')) {
            closePasswordModal();
        }
    }

    function confirmDelete() {
        if (confirm('Êtes-vous sûr de vouloir supprimer votre compte ?')) {
            // Redirect to the delete route or perform the delete action
            window.location.href = '{{ path('patient_delete_profile') }}';
        }
    }
</script>
{% endblock %}
