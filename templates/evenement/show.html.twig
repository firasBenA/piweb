{% extends 'base.html.twig' %}

{% block title %}Événement - Détails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .title {
            text-align: center;
            margin-top: 30px;
            font-weight: bold;
            color: #2c3e50;
            font-size: 2.5rem;
        }
        .table-container {
            margin: 30px auto;
            width: 80%;
            max-width: 900px;
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);
        }
        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }
        .table-container th,
        .table-container td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e9ecef;
        }
        .table-container th {
            background-color: #f8f9fa;
            color: #495057;
            font-weight: 600;
        }
        .table-container tr:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }
        .btn-group {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 25px;
        }
        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
        .btn-primary {
            background-color: #3498db;
            border: none;
            color: white;
        }
        .btn-primary:hover {
            background-color: #2980b9;
        }
        .btn-warning {
            background-color: #f39c12;
            border: none;
            color: white;
        }
        .btn-warning:hover {
            background-color: #e67e22;
        }
        .btn-danger {
            background-color: #e74c3c;
            border: none;
            color: white;
        }
        .btn-danger:hover {
            background-color: #c0392b;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">Détails de l'Événement</h1>
        <div class="table-container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ evenement.nom }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ evenement.contenue }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ evenement.type }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ evenement.statut }}</td>
                    </tr>
                    <tr>
                        <th>Lieu</th>
                        <td>{{ evenement.lieuxEvent }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('app_evenement_index') }}">Retour à la liste</a>
            {% if is_granted('ROLE_MEDECIN') %}
                <a class="btn btn-warning" href="{{ path('app_evenement_modifier', {'id': evenement.id}) }}">Modifier</a>
                <form action="{{ path('app_evenement_delete', {'id': evenement.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}