<ul class="pagination">
    {% if pagination.getCurrentPageNumber() > 1 %}
        <li class="page-item">
            <a class="page-link" href="#" data-page="{{ pagination.getCurrentPageNumber() - 1 }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
    {% endif %}

    {% for page in 1..pagination.getPageCount() %}
        <li class="page-item {% if page == pagination.getCurrentPageNumber() %}active{% endif %}">
            <a class="page-link" href="#" data-page="{{ page }}">{{ page }}</a>
        </li>
    {% endfor %}

    {% if pagination.getCurrentPageNumber() < pagination.getPageCount() %}
        <li class="page-item">
            <a class="page-link" href="#" data-page="{{ pagination.getCurrentPageNumber() + 1 }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    {% endif %}
</ul>
