{% extends 'base.html.twig' %}

{% block title %}Patient {% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f7f8fa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .patient-details {
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        table {
            width: 100%;
            margin-bottom: 30px;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            font-weight: 500;
            font-size: 16px;
            color: #555;
            padding-bottom: 8px;
        }

        td {
            font-size: 16px;
            color: #333;
            padding: 8px 0;
        }

        .actions {
            text-align: center;
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 20px; /* Espace entre les boutons */
        }

        .actions a,
        .actions button {
            padding: 12px 20px;
            border-radius: 8px;
            font-size: 16px;
            text-decoration: none;
        }

        .actions a {
            background-color: #ffc107;
            color: white;
            transition: background-color 0.3s ease;
        }

        .actions a:hover {
            background-color: #e0a800;
        }

        .actions button {
            background-color: #dc3545;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .actions button:hover {
            background-color: #c82333;
        }

        @media (max-width: 768px) {
            .patient-details {
                padding: 20px;
            }

            h1 {
                font-size: 24px;
            }

            th, td {
                font-size: 14px;
            }

            .actions a,
            .actions button {
                font-size: 14px;
                padding: 10px 15px;
            }
        }
    </style>

    <div class="patient-details">
        <h1>Patient Details</h1>

        <table>
            <tr>
                <th>Nom:</th>
                <td>{{ patient.nom }}</td>
            </tr>
            <tr>
                <th>Prénom:</th>
                <td>{{ patient.prenom }}</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>Age:</th>
                <td>{{ patient.age }}</td>
            </tr>
            <tr>
                <th>Téléphone:</th>
                <td>{{ patient.telephone }}</td>
            </tr>
            <tr>
                <th>Sexe:</th>
                <td>{{ patient.sexe }}</td>
            </tr>
            <tr>
                <th>Adresse:</th>
                <td>{{ patient.adresse }}</td>
            </tr>
        </table>

        <div class="actions">
            <a href="{{ path('app_patient_edit', {'id': patient.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('patient/_delete_form.html.twig') }}

        </div>
    </div>
{% endblock %}
