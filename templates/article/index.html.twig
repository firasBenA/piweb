{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenue</th>
                <th>Image</th>
                <th>Prix_article</th>
                <th>Commantaire</th>
                <th>NbJaime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in article %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenue }}</td>
                <td>{{ article.image }}</td>
                <td>{{ article.prixArticle }}</td>
                <td>{{ article.commantaire }}</td>
                <td>{{ article.nbJaime }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">Voir</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Mafamech</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Creer un article </a>
{% endblock %}
