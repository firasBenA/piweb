{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .title {
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
            color: #343a40;
        }
        .table-container {
            margin: 30px auto;
            width: 70%;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}
{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Articles</h1>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Commentaire</th>
                <th>J'aime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in article %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.contenue }}</td>
                    <td><img src="{{ article.image }}" alt="Image" class="img-thumbnail" width="80"></td>
                    <td>{{ article.prixArticle }}TND</td>
                    <td>{{ article.commantaire }}</td>
                    <td>{{ article.nbJaime }}</td>
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucun article trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Créer un article</a>
</div>
{% endblock %}
