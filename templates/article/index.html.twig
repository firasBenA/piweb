{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .articles-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }
        .article-card {
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            background-color: white;
            text-align: center;
        }
        .article-card img {
            width: 100%;
            border-radius: 10px;
            height: 180px;
            object-fit: cover;
        }
        .article-card h3 {
            margin: 10px 0;
            font-size: 18px;
            font-weight: bold;
        }
        .article-info {
            margin-top: 10px;
            font-size: 14px;
            color: #555;
        }
        .likes-comments {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }
        .likes-comments button, .likes-comments a {
            font-size: 14px;
            padding: 5px 10px;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Articles</h1>

    <!-- Search Bar -->
    <div class="search-container text-right mb-3">
        <form method="get" action="{{ path('app_article_index') }}">
            <input type="text" name="search" placeholder="Rechercher un article..." value="{{ app.request.get('search') }}">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </form>
    </div>

    <!-- Article Cards -->
    <div class="articles-container">
        {% for article in article %}
            <div class="article-card">
                <img src="{{ asset('uploads/images/logo2.jpg') }}" class="article-img" alt="Article image">
                <h3>{{ article.titre }}</h3>
                <p class="article-info">{{ article.contenue }}</p>
                
                <!-- Likes and Comments Section -->
                <div class="likes-comments">
                    {% if is_granted('ROLE_PATIENT') %}
                        <button class="btn btn-outline-primary btn-sm like-btn" data-id="{{ article.id }}">
                            üëç J'aime <span class="like-count">{{ article.nbJaime }}</span>
                        </button>
                    {% else %}
                        <span>üëç {{ article.nbJaime }} J'aime</span>
                    {% endif %}
                    
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-outline-secondary btn-sm">
                        üí¨ Commenter ({{ article.commantaire|length }})
                    </a>
                </div>

                <div class="mt-3">
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    {% if is_granted('ROLE_MEDECIN') %}
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun article trouv√©.</p>
        {% endfor %}
    </div>

    {% if is_granted('ROLE_MEDECIN') %}
        <div class="text-center mt-4">
            <a href="{{ path('app_article_new') }}" class="btn btn-primary">Cr√©er un article</a>
        </div>
    {% endif %}
</div>

<!-- JavaScript for Like Button -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".like-btn").forEach(button => {
            button.addEventListener("click", function () {
                let articleId = this.getAttribute("data-id");
                let likeCountSpan = this.querySelector(".like-count");

                fetch(`/article/${articleId}/like`, {
                    method: "POST",
                    headers: {
                        "X-Requested-With": "XMLHttpRequest"
                    }
                }).then(response => response.json())
                .then(data => {
                    if (data.success) {
                        likeCountSpan.textContent = data.likes;
                    }
                });
            });
        });
    });
</script>
{% endblock %}
