{% extends 'base.html.twig' %}

{% block title %}DÃ©tails de l'Article{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">{{ article.titre }}</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ article.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ article.titre }}</td>
                    </tr>
                    <tr>
                        <th>Contenue</th>
                        <td>{{ article.contenue }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img src="{{ asset('uploads/articles/' ~ article.image) }}" alt="Image" class="img-fluid img-thumbnail"></td>
                    </tr>
                    
                    <tr>
                        <th>J'aime</th>
                        <td>{{ article.nbJaime }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Retour</a>
            {% if is_granted('ROLE_MEDECIN') %}
            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
            
            {{ include('article/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
