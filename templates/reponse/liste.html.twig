}

/* Animation au survol */
@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

.pagination-container .pagination li a:hover {
    animation: pulse 0.4s ease;
