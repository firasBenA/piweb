{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold mb-4">ðŸ“‘ Ajouter une RÃ©clamation</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card shadow-lg rounded">
            <div class="card-header bg-dark text-white">
                <strong>Formulaire de RÃ©clamation</strong>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false'}}) }}

                <div class="mb-3">
                    {{ form_label(form.sujet, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.sujet, {
                        'attr': {
                            'class': 'form-control',
                            'required': 'required',
                            'minlength': 3,
                            'maxlength': 255
                        }
                    }) }}
                    {{ form_errors(form.sujet, {'attr': {'class': 'text-danger fw-bold mt-1'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'form-control',
                            'required': 'required',
                            'minlength': 10,
                            'rows': 5
                        }
                    }) }}
                    {{ form_errors(form.description, {'attr': {'class': 'text-danger fw-bold mt-1'}}) }}
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 py-2">Enregistrer</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f0f8ff;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
        }

        .card-header {
            background-color: #343a40;
        }

        .btn {
            transition: all 0.3s ease-in-out;
        }

        .btn:hover {
            transform: scale(1.05);
        }

        .form-control {
            border-radius: 8px;
        }
    </style>
{% endblock %}
