{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold mb-4">ðŸ“‘ Ajouter une RÃ©clamation</h1>

        {# Affichage des messages de succÃ¨s #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {# Affichage des messages d'erreur #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card shadow-lg rounded">
            <div class="card-header bg-dark text-white">
                <strong>Formulaire de RÃ©clamation</strong>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false'}}) }}

                <div class="mb-3">
                    {{ form_label(form.sujet, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.sujet, {
                        'attr': {
                            'class': 'form-control',
                            'required': 'required',
                            'minlength': 3,
                            'maxlength': 255
                        }
                    }) }}
                    {{ form_errors(form.sujet, {'attr': {'class': 'text-danger fw-bold mt-1'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'form-control ' ~ (app.flashes('error') ? 'is-invalid' : ''),
                            'required': 'required',
                            'minlength': 10,
                            'rows': 5
                        }
                    }) }}
                    {% if app.flashes('error') %}
                        <div class="invalid-feedback fw-bold">
                            {{ app.flashes('error')|first }}
                        </div>
                    {% endif %}
                    {{ form_errors(form.description, {'attr': {'class': 'text-danger fw-bold mt-1'}}) }}
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 py-2">Enregistrer</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f0f8ff;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
        }

        .card-header {
            background-color: #343a40;
        }

        .btn {
            transition: all 0.3s ease-in-out;
        }

        .btn:hover {
            transform: scale(1.05);
        }

        .form-control {
            border-radius: 8px;
        }

        .form-control.is-invalid {
            border: 2px solid red;
            background-color: #ffe6e6;
        }

        .alert {
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
{% endblock %}
