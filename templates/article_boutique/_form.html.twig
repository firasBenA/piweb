{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom) }}
        {{ form_errors(form.nom) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.prix) }}
        {{ form_widget(form.prix) }}
        {{ form_errors(form.prix) }}
    </div>

    <div class="form-group">
        {{ form_label(form.stock) }}
        {{ form_widget(form.stock) }}
        {# Display the error message to the right if validation fails #}
        {% if form.stock.vars.errors|length > 0 %}
            <span class="error-message" style="color: red; margin-left: 10px;">
                {{ form.stock.vars.errors[0].message }}
            </span>
        {% endif %}
    </div>

    {# Render the 'creeLe' field in its proper position before the button #}
    <div class="form-group">
        {{ form_label(form.creeLe) }}
        {{ form_widget(form.creeLe) }}
        {{ form_errors(form.creeLe) }}
    </div>

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
