{% extends 'base.html.twig' %}

{% block title %}Edit ArticleBoutique - {{ articleBoutique.nom }}{% endblock %}

{% block body %}
    <h1>Edit {{ articleBoutique.nom }}</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_row(form.nom) }}
    {{ form_row(form.description) }}
    {{ form_row(form.prix) }}
    {{ form_row(form.stock) }}
    {{ form_row(form.creeLe) }}
    {{ form_row(form.image) }} 

    <!-- Show current image if it exists -->
    {% if articleBoutique.image %}
        <div>
            <p>Current Image:</p>
            <img src="{{ asset('uploads/images/' ~ articleBoutique.image) }}" 
                 alt="Article Image" 
                 style="max-width: 200px; height: auto;">
        </div>
    {% endif %}

    <!-- Save Changes Button -->
    <button type="submit" class="btn btn-primary">Save changes</button>

    {{ form_end(form) }}

    <!-- Delete Button -->
    {{ include('article_boutique/_delete_form.html.twig') }}

{% endblock %}
