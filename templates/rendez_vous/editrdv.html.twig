{# templates/rendezvous/modify_rdv.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold">üìù Modifier le Rendez-vous</h1>

        {# Display Flash Messages #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card p-5 shadow-lg rounded">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    
                    <div class="mb-4">
                        {{ form_label(form.date, 'Date du rendez-vous', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Choisissez une nouvelle date'}}) }}
                        {{ form_errors(form.date) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.type_rdv, 'Type de rendez-vous', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.type_rdv, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'S√©lectionnez le type'}}) }}
                        {{ form_errors(form.type_rdv) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.cause, 'Cause du rendez-vous', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.cause, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'D√©crivez la cause du rendez-vous'}}) }}
                        {{ form_errors(form.cause) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.medecin, 'M√©decin', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.medecin, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'S√©lectionnez un m√©decin'}}) }}
                        {{ form_errors(form.medecin) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg shadow px-4 py-2 fw-bold">Enregistrer les modifications</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .form-control, .btn {
            transition: all 0.3s ease-in-out;
        }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #007bff;
        }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

        .card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-control-lg {
            font-size: 1.2rem; /* Increased font size */
            padding: 1.25rem; /* Increased padding */
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .text-primary {
            color: #007bff !important;
        }

        .fw-bold {
            font-weight: bold;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
    </style>
{% endblock %}
