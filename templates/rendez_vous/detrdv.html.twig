{% extends 'patemp.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-5 rounded-4 border-0" style="background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">
            <h1 class="text-center text-gradient fw-bold mb-4">📋 Détails du Rendez-vous</h1>

            <div class="row">
                <!-- Image du médecin -->
                <div class="col-md-4 text-center">
                    <h3 class="mt-3 fw-bold">Dr. {{ nom_medecin }} {{ prenom_medecin }}</h3>
                    <span class="badge bg-primary">{{ specialite_medecin }}</span>
                </div>

                <!-- Détails du rendez-vous -->
                <div class="col-md-8">
                    <ul class="list-group list-group-flush fs-5">
                        <li class="list-group-item"><strong>📅 Date :</strong> {{ date_rdv|date('d/m/Y') }}</li>
                        <li class="list-group-item"><strong>📝 Type :</strong> {{ type_rdv }}</li>
                        <li class="list-group-item"><strong>❓ Cause :</strong> {{ cause }}</li>
                        <li class="list-group-item"><strong>🏥 Adresse du Cabinet :</strong> {{ adresse }}</li>
                        <li class="list-group-item">
                            <strong>📌 Statut :</strong>
                            <span class="badge {{ statut == 'Approuvé' ? 'bg-success' : (statut == 'En attente' ? 'bg-warning text-dark' : 'bg-danger') }}">
                                {{ statut }}
                            </span>
                        </li>
       
    </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Styles pour la page */
        body {

        }

        .card {
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
        }

        .badge {
            font-size: 16px;
            padding: 8px 12px;
            border-radius: 8px;
        }

        

        .text-gr
        }
    </style>
{% endblock %}