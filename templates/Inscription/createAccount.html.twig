{# templates/Inscription/createAccount.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 dark:bg-gray-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-6 text-center">
            Créer un compte
        </h1>

        {# Choix du type de compte #}
        <div class="flex flex-row gap-6 justify-center items-center w-full max-w-2xl mx-auto mb-8">
    {# Carte Médecin #}
    <a href="{{ path('app_medecin_controllerr_new') }}" 
       class="p-6 text-center bg-blue-50 dark:bg-gray-700 rounded-lg transition-all hover:bg-blue-100 dark:hover:bg-gray-600 cursor-pointer group flex flex-col items-center w-1/2">
        <img src="{{ asset('./medecin/assets/img/medecin-icon.png') }}" alt="Médecin" class="w-20 h-20 mx-auto mb-2">
        <h3 class="font-semibold text-gray-800 dark:text-white">Médecin</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Inscrire en tant que Médecin</p>
    </a>

    {# Carte Patient #}
    <a href="{{ path('app_patient_new') }}" 
       class="p-6 text-center bg-green-50 dark:bg-gray-700 rounded-lg transition-all hover:bg-green-100 dark:hover:bg-gray-600 cursor-pointer group flex flex-col items-center w-1/2">
        <img src="{{ asset('./medecin/assets/img/patient-icon.png') }}" alt="Patient" class="w-20 h-20 mx-auto mb-2">
        <h3 class="font-semibold text-gray-800 dark:text-white">Patient</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Inscrire en tant que Patient</p>
    </a>
</div>


        <div class="mt-6 text-center">
            <a href="{{ path('app_login') }}" class="text-blue-600 dark:text-blue-400 hover:underline">
                Déjà un compte ? Se connecter
            </a>
        </div>
    </div>
</div>
{% endblock %}