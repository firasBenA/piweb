{# templates/medecin/dashboard.html.twig #}

<header>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

	<div class="header-area">
		<div class="main-header header-sticky">
			<div class="container-fluid">
				<div class="row align-items-center">
					<div class="col-xl-2 col-lg-2 col-md-1">
						<div class="logo">
							<a href="#"><img src="assets/img/logo/logo.png" alt="Medical Logo"></a>
						</div>
					</div>
					<div class="col-xl-10 col-lg-10 col-md-10">
						<div class="menu-main d-flex align-items-center justify-content-end">
							<div class="main-menu f-right d-none d-lg-block">
								<nav>
									<ul id="navigation">
										<li>
											<a href="{{ path('medecinDashboard') }}">Tableau De Board</a>
										</li>
										<li>
											<a href="{{ path('PrescriptionMedecin_page') }}">Prescription</a>
										</li>
										<li>
											<a href="{{ path('consultation_medecin_list') }}">Consultations</a>
										</li>
									</li>
									<li>
										<a href="#">Mes Informations</a>
									</li>
									<li></li>
								</nav>
							</div>
							<div class="header-right-btn f-right d-none d-lg-block ml-30">
								{% if medecin %}
									<a href="{{ path('app_logout') }}" class="btn header-btn" style="background-color: #dc3545; color: white; padding: 10px 20px; border-radius: 5px;">Logout</a>
								{% else %}
									<a href="{{ path('app_login') }}" class="btn header-btn" style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px;">Sign-In</a>
								{% endif %}
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>


{% block stylesheets %}
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="text-center mb-4">
			<h1>Bienvenue Dr.
				{{ medecin.nom }}
				{{ medecin.prenom }}</h1>
			<p>Voici vos prescription et diagnostique</p>
		</div>

		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card shadow-sm mb-4">
						<div class="card-body">
							<h5 class="card-title">Mes Diagnostiques</h5>
							<div class="table-responsive">
								<table class="table table-striped w-100">
									<thead>
										<tr>
											<th>ID</th>
											<th>nom</th>
											<th>Description</th>
											<th>Date</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										{% for diagnostique in diagnostiques %}
											<tr>
												<td>{{ diagnostique.id  }}</td>
												<td>{{ diagnostique.nom }}</td>
												<td>{{ diagnostique.description }}</td>
												<td>{{ diagnostique.dateDiagnostique|date('Y-m-d') }}</td>
												<td
													class="px-4 py-3 text-xs">
													<!-- Status conditional rendering -->
													{% if diagnostique.status == 0 %}
														<a href="{{ path('app_prescription_new', {'diagnostique_id': diagnostique.id}) }}" class="px-2 py-1 font-semibold leading-tight text-black-700 bg-white-100 rounded-full dark:bg-blue-500 dark:text-white">
															<p>+</p>
														</a>
													{% elseif diagnostique.status == 1 %}
														<div class="px-2 py-1 font-semibold leading-tight text-black-700 bg-white-100 rounded-full dark:bg-blue-500 dark:text-white">
															<i class="fas fa-check"></i>
														</div>
														<!-- Check mark for status 1 -->
													{% endif %}
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="6" class="text-center">No diagnostiques available.</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card shadow-sm mb-4">
						<div class="card-body">
							<h5 class="card-title">Mes Prescriptions</h5>
							<div class="table-responsive">
								<table class="table table-striped w-100">
									<thead>
										<tr>
											<th>ID</th>
											<th>Titre</th>
											<th>Contenue</th>
											<th>Date</th>
											<th>Doctor</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										{% for prescription in prescriptions %}
											<tr>
												<td class="px-4 py-3">
													<div class="flex items-center text-sm">
														<div>
															<a href="{{ path('prescription_details', { 'id': prescription.id }) }}">{{ prescription.id }}</a>
														</div>
													</div>
												</td>
												<td>{{ prescription.titre }}</td>
												<td>{{ prescription.contenue }}</td>
												<td>{{ prescription.datePrescription|date('Y-m-d') }}</td>
												<td>{{ prescription.medecin.nom }}</td>
												<td>
													<form action="{{ path('app_prescription_delete', {'id': prescription.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this prescription?');" style="display: inline;">
														<button class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Delete">
															<svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20">
																<path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
															</svg>
														</button>
													</form>

													<a href="{{ path('app_prescription_edit', {'id': prescription.id}) }}" class="btn btn-primary">
														<button class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Edit">
															<svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20">
																<path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
															</svg>
														</button>
													</a>
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="6" class="text-center">No diagnostiques available.</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


	</div>
</div>

<style>
	body {
		background-color: #f8f9fa;
		font-family: 'Poppins', sans-serif;
	}

	.card {
		border-radius: 10px;
	}

	.table th,
	.table td {
		vertical-align: middle;
	}

	.btn {
		border-radius: 20px;
	}


	.header-area {
		background: #fff;
		padding: 10px 0;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.main-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.menu-main {
		display: flex;
		align-items: center;
	}

	.main-menu nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
	}

	.main-menu nav ul li {
		position: relative;
		margin: 0 15px;
	}

	.main-menu nav ul li a {
		text-decoration: none;
		color: #000;
		font-weight: 600;
		font-size: 16px;
		padding: 10px 15px;
		display: block;
	}

	.main-menu nav ul li a:hover {
		color: #007bff;
	}

	.header-right-btn {
		margin-left: 30px;
	}

	.header-btn {
		background-color: #007bff;
		color: white;
		padding: 10px 20px;
		border-radius: 5px;
		text-decoration: none;
		font-weight: bold;
	}

	.header-btn:hover {
		background-color: #0056b3;
	}

	/* Sous-menu */
	.main-menu nav ul li ul.submenu {
		display: none;
		position: absolute;
		top: 100%;
		left: 0;
		background: #fff;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		border-radius: 5px;
		min-width: 180px;
	}

	.main-menu nav ul li:hover ul.submenu {
		display: block;
	}

	.main-menu nav ul li ul.submenu li {
		margin: 0;
		display: block;
	}

	.main-menu nav ul li ul.submenu li a {
		padding: 10px;
		display: block;
	}


	body {
		font-family: 'Poppins', sans-serif;
	}

	.main-menu nav ul li a {
		font-family: 'Poppins', sans-serif;
		font-weight: 400;
		font-size: 16px;
		color: #2c2c2c;
		text-transform: capitalize;
	}

	.header-btn {
		font-family: 'Poppins', sans-serif;
		font-weight: 400;
		font-size: 16px;
	}
</style>{% endblock %}
