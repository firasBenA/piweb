
{% extends 'meddtemp.html.twig' %}


{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
{% endblock %}



{% block body %}
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1>Bienvenue Dr. {{ medecin.nom }} {{ medecin.prenom }}</h1>
            <p>Voici votre dashboard personnel</p>
        </div>

        <div class="row">
            <!-- Image du Médecin à gauche -->
            <div class="col-md-3">
                <div class="image-container mb-4">
                
                    <img src="{{ asset('uploads/images/' ~ app.user.imageProfil) }}" alt="Profile Image" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
                </div>
            </div>

            <!-- Informations du Médecin à droite -->
            <div class="col-md-9">
                <div class="card shadow-sm mb-4" style="height: 350px;"> <!-- Ajuster la hauteur ici -->
                    <div class="card-body">
                        <h5 class="card-title">Mes Informations</h5>
                        <p><strong>Nom :</strong> {{ medecin.nom }} {{ medecin.prenom }}</p>
                        <p><strong>Email :</strong> {{ medecin.email }}</p>
                        <p><strong>Spécialité :</strong> {{ medecin.specialite }}</p>
                        <p><strong>Âge :</strong> {{ medecin.age }} ans</p>
                        <p><strong>Adresse :</strong> {{ medecin.adresse }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Consultations du Médecin -->
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Mes Consultations</h5>
                        <a href="{{ path('consultation_medecin_list', {'id': medecin.id}) }}" class="btn btn-primary mb-3">
                            Accéder à ma liste de consultations
                        </a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Patient</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for consultation in consultations %}
                                    <tr>
                                        <td>{{ consultation.date|date('d/m/Y ') }}</td>
                                        <td>{{ consultation.patient.nom }} {{ consultation.patient.prenom }}</td>
                                        <td>{{ consultation.rendezVous.statut }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center">Aucune consultation à afficher</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .card {
            border-radius: 10px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn {
            border-radius: 20px;
        }

       

        .menu-main {
            display: flex;
            align-items: center;
        }

        .main-menu nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
        }

        .main-menu nav ul li {
            position: relative;
            margin: 0 15px;
        }

        .main-menu nav ul li a {
            text-decoration: none;
            color: #000;
            font-weight: 600;
            font-size: 16px;
            padding: 10px 15px;
            display: block;
        }

        .main-menu nav ul li a:hover {
            color: #007bff;
        }

        .header-btn {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
        }

        .header-btn:hover {
            background-color: #0056b3;
        }

        /* Image de Profil */
        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Maintient les proportions de l'image */
            border-radius: 10px;
        }

        /* Mise en page pour les colonnes */
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-md-3 {
            flex: 0 0 25%;
            padding: 15px;
        }

        .col-md-9 {
            flex: 0 0 75%;
            padding: 15px;
        }

        .profile-dropdown {
    position: relative;
    display: inline-block;
}

.profile-dropdown img {
    width: 40px; /* Taille réduite */
    height: 40px; /* Taille réduite */
    border-radius: 50%; /* Cercle parfait */
    object-fit: cover; /* Assure que l'image remplit bien le cercle */
    border: 2px solid #fff; /* Bordure blanche pour un meilleur design */
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2); /* Ombre légère */
    cursor: pointer;
}

.profile-dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: white;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    min-width: 150px;
    z-index: 1000;
}

.profile-dropdown:hover .profile-dropdown-content {
    display: block;
}

.profile-dropdown-content a {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: black;
}

.profile-dropdown-content a:hover {
    background-color: #f1f1f1;
}

    </style>
{% endblock %}
