							<p>
								<strong>Spécialité :</strong>
								{{ medecin.specialite }}</p>
							<p>
								<strong>Âge :</strong>
								{{ medecin.age }}
								ans</p>
							<p>
								<strong>Adresse :</strong>
								{{ medecin.adresse }}</p>
							<img src="assets/img/logo/logo.png" alt="Image de profil" class="img-fluid rounded-circle" style="width: 100px; height: 100px;">
						</div>
					</div>
				</div>

				<div class="col-md-8">
					<div class="card shadow-sm mb-4">
						<div class="card-body">
							<h5 class="card-title">Mes Consultations</h5>
