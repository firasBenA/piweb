		<style>
			body {
				background-color: #f8f9fa;
				font-family: 'Poppins', sans-serif;
			}

			.card {
				border-radius: 10px;
			}

			.table th,
			.table td {
				vertical-align: middle;
			}

			.btn {
				border-radius: 20px;
			}


			.header-area {
				background: #fff;
				padding: 10px 0;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}

			.main-header {
				display: flex;
				align-items: center;
				justify-content: space-between;
			}

			.menu-main {
				display: flex;
				align-items: center;
			}

			.main-menu nav ul {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
			}

			.main-menu nav ul li {
				position: relative;
				margin: 0 15px;
			}

			.main-menu nav ul li a {
				text-decoration: none;
				color: #000;
				font-weight: 600;
				font-size: 16px;
				padding: 10px 15px;
				display: block;
			}

			.main-menu nav ul li a:hover {
				color: #007bff;
			}

			.header-right-btn {
				margin-left: 30px;
			}

			.header-btn {
				background-color: #007bff;
				color: white;
				padding: 10px 20px;
				border-radius: 5px;
				text-decoration: none;
				font-weight: bold;
			}

			.header-btn:hover {
				background-color: #0056b3;
			}

			/* Sous-menu */
			.main-menu nav ul li ul.submenu {
				display: none;
				position: absolute;
				top: 100%;
				left: 0;
				background: #fff;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
				border-radius: 5px;
				min-width: 180px;
			}

			.main-menu nav ul li:hover ul.submenu {
				display: block;
			}

			.main-menu nav ul li ul.submenu li {
				margin: 0;
				display: block;
			}

			.main-menu nav ul li ul.submenu li a {
				padding: 10px;
				display: block;
			}


			body {
				font-family: 'Poppins', sans-serif;
			}

			.main-menu nav ul li a {
				font-family: 'Poppins', sans-serif;
				font-weight: 400;
				font-size: 16px;
				color: #2c2c2c;
				text-transform: capitalize;
			}

			.header-btn {
				font-family: 'Poppins', sans-serif;
				font-weight: 400;
				font-size: 16px;
			}
		</style>
