{% extends 'meddtemp.html.twig' %}

{% block body %}
    <!-- Main Content Start -->
    <div class="container mt-5">
        <!-- Titre et filtre align√©s sur la m√™me ligne -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary fw-bold">üìÖ Liste des Consultations du Dr. {{ app.user.nom }} {{ app.user.prenom }}</h1>
            <div class="d-flex align-items-center">
                <span class="me-2 fw-bold">S√©lectionner le type :</span>
                <select id="typeRdvFilter" class="form-select" style="width: auto;">
                    <option value="">Tous les types</option>
                    <option value="consultation">Consultation</option>
                    <option value="suivi">Suivi</option>
                    <option value="urgence">Urgence</option>
                </select>
            </div>
        </div>

        <!-- Tableau des rendez-vous -->
        <div id="rendezVousTable">
            {% include 'consultation/_rendezVous_table.html.twig' %}
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="#" onclick="loadPage({{ page - 1 }})">Pr√©c√©dent</a>
                    </li>
                {% endif %}
                {% for i in 1..pagesCount %}
                    <li class="page-item {{ i == page ? 'active' : '' }}">
                        <a class="page-link" href="#" onclick="loadPage({{ i }})">{{ i }}</a>
                    </li>
                {% endfor %}
                {% if page < pagesCount %}
                    <li class="page-item">
                        <a class="page-link" href="#" onclick="loadPage({{ page + 1 }})">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>

    <!-- Modal Popup -->
    <div id="popupModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closePopup()">&times;</span>
            <h2>Approuver le Rendez-vous</h2>
            <form id="approveForm" method="post">
                <label for="heure">Choisir une heure:</label>
                <input type="time" id="heure" name="heure" required>
                <label for="prix">Prix de la consultation:</label>
                <input type="number" id="prix" name="prix" required>
                <button type="submit" class="btn btn-success">Confirmer</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Fonction pour ouvrir le popup
        function openPopup(rdvId) {
            document.getElementById("popupModal").style.display = "block";
            document.getElementById("approveForm").action = `/approuver/${rdvId}`;
        }

        // Fonction pour fermer le popup
        function closePopup() {
            document.getElementById("popupModal").style.display = "none";
        }

        // Fermer le popup si l'utilisateur clique en dehors de la fen√™tre modale
        window.onclick = function(event) {
            const modal = document.getElementById("popupModal");
            if (event.target === modal) {
                closePopup();
            }
        };

        // Fonction pour charger une page via AJAX
        function loadPage(page) {
            const typeRdv = document.getElementById('typeRdvFilter').value;
            fetch(`/listcon?page=${page}&typeRdv=${typeRdv}`, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                // Mettre √† jour le tableau des rendez-vous
                const tableBody = document.querySelector('#rendezVousTable tbody');
                tableBody.innerHTML = '';
                data.rendezVous.forEach(rdv => {
                    const row = `
                        <tr class="bg-white">
                            <td><strong>#${rdv.id}</strong></td>
                            <td>${rdv.date}</td>
                            <td>${rdv.typeRdv}</td>
                            <td>${rdv.cause}</td>
                            <td>${rdv.patient}</td>
                            <td>
                                ${rdv.statut === 'En attente' ? '<span class="badge bg-warning text-dark">üïí En attente</span>' : ''}
                                ${rdv.statut === 'Approuv√©' ? '<span class="badge bg-success">‚úÖ Approuv√©</span>' : ''}
                                ${rdv.statut === 'Refus√©' ? '<span class="badge bg-danger">‚ùå Refus√©</span>' : ''}
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-success btn-sm me-2 shadow-lg" onclick="openPopup(${rdv.id})">‚úÖ Approuver</button>
                                    <a href="/refuser/${rdv.id}" class="btn btn-danger btn-sm me-2 shadow-lg">‚ùå Refuser</a>
                                    <a href="/modifier/${rdv.id}" class="btn btn-warning btn-sm shadow-lg">‚úè Modifier</a>
                                    <a href="/consultationhis_create/${rdv.id}" class="btn btn-info btn-sm shadow-lg">üìù Notes</a>
                                </div>
                            </td>
                        </tr>
                    `;
                    tableBody.insertAdjacentHTML('beforeend', row);
                });

                // Mettre √† jour la pagination
                const pagination = document.querySelector('.pagination');
                pagination.innerHTML = '';
                if (data.page > 1) {
                    pagination.insertAdjacentHTML('beforeend', `
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="loadPage(${data.page - 1})">Pr√©c√©dent</a>
                        </li>
                    `);
                }
                for (let i = 1; i <= data.pagesCount; i++) {
                    pagination.insertAdjacentHTML('beforeend', `
                        <li class="page-item ${i === data.page ? 'active' : ''}">
                            <a class="page-link" href="#" onclick="loadPage(${i})">${i}</a>
                        </li>
                    `);
                }
                if (data.page < data.pagesCount) {
                    pagination.insertAdjacentHTML('beforeend', `
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="loadPage(${data.page + 1})">Suivant</a>
                        </li>
                    `);
                }
            });
        }

        // Appliquer le filtre
        document.getElementById('typeRdvFilter').addEventListener('change', () => {
            loadPage(1);
        });
    </script>
{% endblock %}