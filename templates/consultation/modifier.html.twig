{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Modifier la Consultation</h1>

        {# Affichage des messages flash #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4 shadow">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.date, 'Nouvelle Date de la Consultation', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}

                        {# âœ… Affichage des erreurs Symfony #}
                        {% if form.date.vars.errors|length > 0 %}
                            <div class="text-danger mt-1">
                                {% for error in form.date.vars.errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .alert {
            margin-bottom: 1rem;
        }

        .card {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
    </style>
{% endblock %}