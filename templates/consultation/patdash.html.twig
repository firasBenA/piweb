{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<header class="header-area">
    <div class="main-header header-sticky">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto">
                    <div class="logo">
                        <a href="#"><img src="{{ asset('assets/img/logo/logo.png') }}" alt="Medical Logo"></a>
                    </div>
                </div>
                <div class="col-auto">
                    <nav class="d-flex align-items-center">
                        <ul class="nav">
                            <li class="nav-item"><a class="nav-link" href="{{ path('home_page') }}">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('diagnostique_page') }}">Diagnostique</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('doctors_page') }}">Doctors</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('listrdv', {'id': patient.id}) }}">Mes Rendez Vous</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('blog_page') }}">Blog</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('reclamation_page') }}">Reclamation</a></li>
                        </ul>
                        <div class="header-right-btn f-right d-none d-lg-block ml-30">
									{% if app.user %}
										<div class="profile-dropdown">
											<img src="{{ asset('uploads/images/' ~ app.user.imageProfil) }}" alt="Profile Image">
											<div class="profile-dropdown-content">
												<a href="{{ path('app_logout') }}">
													<i class="fas fa-sign-out-alt logout-icon"></i> Déconnexion
												</a>
											</div>
										</div>
									{% else %}
										<a href="{{ path('app_login2') }}" class="btn header-btn">Se connecter</a>
									{% endif %}
								</div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1>Bienvenue {{ patient.nom }} {{ patient.prenom }}</h1>
        <p>Voici votre espace personnel</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Mes Informations</h5>
                    <p><strong>Email :</strong> {{ patient.email }}</p>
                    <p><strong>Âge :</strong> {{ patient.age }} ans</p>
                    <p><strong>Téléphone :</strong> {{ patient.telephone }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Mes Rendez-vous</h5>
                    <a href="{{ path('addrendezvous', {'id': patient.id}) }}" class="btn btn-success mb-3">
                        <i class="fas fa-calendar-plus"></i> Ajouter un Rendez-vous
                    </a>
                     <a href="{{ path('app_dashboard') }}" class="btn btn-info mb-3">
        <i class="fas fa-chart-line"></i> Statistiques Médecin
    </a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Médecin</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for rendezVous in rendezVous %}
                                <tr>
                                    <td>{{ rendezVous.date|date('d/m/Y H:i') }}</td>
                                    <td>Dr. {{ rendezVous.medecin.nom }} {{ rendezVous.medecin.prenom }}</td>
                                    <td>
                                        {% if rendezVous.statut == 'Approuvé' %}
                                            <span class="badge badge-success">Confirmé</span>
                                        {% elseif rendezVous.statut == 'Refusé' %}
                                            <span class="badge badge-danger">Annulé</span>
                                        {% else %}
                                            <span class="badge badge-warning">En attente</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Aucun rendez-vous à venir</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="bg-light text-center py-4 mt-4">
    <p>&copy; 2025 Medical. Tous droits réservés.</p>
</footer>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .header-area {
        background: #fff;
        padding: 15px 0;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .nav .nav-item .nav-link {
        color: #1d1d1d;
        font-weight: 500;
        padding: 10px 15px;
        transition: color 0.3s ease-in-out;
        text-decoration: none;
    }

    .nav .nav-item .nav-link:hover {
        color: #007bff;
        text-decoration: none;
    }

    .sign-in-btn {
        background: linear-gradient(90deg, #2979FF, #005BEA);
        color: white;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 4px 6px rgba(0, 91, 234, 0.3);
        border: none;
    }

    .sign-in-btn:hover {
        background: linear-gradient(90deg, #005BEA, #2979FF);
        color: white;
    }

    .sign-in-btn:focus {
        box-shadow: none;
        outline: none;
    }

    .card {
        border-radius: 10px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn {
        border-radius: 20px;
    }

    .row > .col-md-6 {
        display: flex;
        flex-direction: column;
    }
    
.profile-dropdown {
    position: relative;
    display: inline-block;
}

.profile-dropdown img {
    width: 40px; /* Taille réduite */
    height: 40px; /* Taille réduite */
    border-radius: 50%; /* Cercle parfait */
    object-fit: cover; /* Assure que l'image remplit bien le cercle */
    border: 2px solid #fff; /* Bordure blanche pour un meilleur design */
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2); /* Ombre légère */
    cursor: pointer;
}

.profile-dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: white;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    min-width: 150px;
    z-index: 1000;
}

.profile-dropdown:hover .profile-dropdown-content {
    display: block;
}

.profile-dropdown-content a {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: black;
}

.profile-dropdown-content a:hover {
    background-color: #f1f1f1;
}



</style>
{% endblock %}
